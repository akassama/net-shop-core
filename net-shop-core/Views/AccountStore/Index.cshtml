@{
    ViewData["Title"] = "Home Page";
}



<div class="d-flex" id="wrapper">
    <!-- Sidebar -->
    @await Html.PartialAsync("~/Views/Shared/AdminLayout/_LeftSideBar.cshtml")
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">

        <!-- //Top menu item -->
        @await Html.PartialAsync("~/Views/Shared/AdminLayout/_NavBarTop.cshtml")


        <div class="container-fluid">
            <h1 class="mt-4">
                Dashboard
            </h1>
            <div class="row">
                <div class="col main pt-0 mt-3">
                    <p class="lead d-none d-sm-block">Manage dashboard</p>

                    <div class="row mb-3">
                        <div class="col-xl-3 col-sm-6 py-2">
                            <a href="~/Dashboard/Inbox" style="">
                                <div class="card bg-success text-white h-100">
                                    <div class="card-body bg-success">
                                        <div class="rotate">
                                            <i class="fas fa-user fa-4x"></i>
                                        </div>
                                        <h4 class="text-uppercase">Profile</h4>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-xl-3 col-sm-6 py-2">
                            <a href="~/AccountStore/ManagePosts" style="">
                                <div class="card text-white bg-danger h-100">
                                    <div class="card-body bg-danger">
                                        <div class="rotate">
                                            <i class="fas fa-list fa-4x"></i>
                                        </div>
                                        <h4 class="text-uppercase">Product Posts</h4>
                                        <h1 class="display-4">
                                            12
                                        </h1>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-xl-3 col-sm-6 py-2">
                            <a href="~/Dashboard/Unsent" style="">
                                <div class="card text-white bg-info h-100">
                                    <div class="card-body bg-info">
                                        <div class="rotate">
                                            <i class="fas fa-chart-bar fa-4x"></i>
                                        </div>
                                        <h4 class="text-uppercase">Statistics</h4>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-xl-3 col-sm-6 py-2">
                            <a href="~/Dashboard/Settings" style="">
                                <div class="card text-white bg-warning h-100">
                                    <div class="card-body">
                                        <div class="rotate">
                                            <i class="fa fa-cogs fa-4x"></i>
                                        </div>
                                        <h4 class="text-uppercase">Settings</h4>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <!--/row-->

                </div>
                <!--/main col-->
            </div>
        </div>

    </div>
    <!-- /#page-content-wrapper -->

</div>