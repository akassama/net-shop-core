@using AppHelpers.App_Code

<!-- iterate through the products of the category (Collections) -->
@{
foreach (var item in Model)
{
    <div class="col-sm-6 col-lg-4 mb-4" data-aos="fade-up">
        <div class="block-4 text-center border">
            <figure class="block-4-image">
                <a href="~/Shop/Details/@item.UniqueProductName"><img src="~/files/@ProductsHelper.GetProductImageLink(item.AccountID, item.ProductID)" alt="@item.ProductName" class="rounded" width="358" height="380"></a>
            </figure>
            <div class="block-4-text p-4">
                <h3><a href="~/Shop/Details/@item.UniqueProductName">@ProductsHelper.GetProductCategory(item.CategoryID)</a></h3>
                <p class="mb-0">@item.ProductName</p>
                <p class="text-primary font-weight-bold">GMD @item.ProductPrice</p>
            </div>
        </div>
    </div>
}
}
