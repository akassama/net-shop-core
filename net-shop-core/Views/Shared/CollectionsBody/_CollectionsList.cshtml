<div class="row home-collections-img">
    <!-- iterate through collections list in viebag -->
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-6 col-lg-4 mb-4 mb-lg-2" data-aos="fade" data-aos-delay="">
            <a class="block-2-item" href="~/Collections/Category/@item.CategoryName">
                <figure class="image">
                    <img src="~/files/images/@item.CategoryImage" alt="" class="img-fluid">
                </figure>
                <div class="text">
                    <span class="text-uppercase">Collections</span>
                    <h3>@item.CategoryName</h3>
                </div>
            </a>
        </div>
    }

</div>