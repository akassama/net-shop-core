<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            @{
                if (!String.IsNullOrEmpty(ViewData["Parent"].ToString()))
                {
                        <div class="col-md-12 mb-0"><a href="~/">Home</a> <span class="mx-2 mb-0">/</span> <a href="~/@ViewData["Parent"]">@ViewData["Parent"]</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">@ViewData["Title"]</strong></div>
                }
                else
                {
                    <div class="col-md-12 mb-0"><a href="~/">Home</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">@ViewData["Title"] </strong></div>
                }
            }
        </div>
    </div>
</div>