@using AppHelpers.App_Code

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shopping Gambia</title>

    <link rel="stylesheet" href="~/lib/modest/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/modest/css/google-fonts.css">
    <link rel="stylesheet" href="~/lib/modest/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/lib/modest/css/magnific-popup.css">
    <link rel="stylesheet" href="~/lib/modest/css/jquery-ui.css">
    <link rel="stylesheet" href="~/lib/modest/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/lib/modest/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/lib/modest/css/aos.css">
    <link rel="stylesheet" href="~/lib/modest/css/style.css">


    <script src="~/lib/modest/js/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <script src="~/lib/modest/js/bootstrap.min.js"></script>

    <!-- Summernote Scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="~/lib/summernote/styles/summernote-lite.min.css" rel="stylesheet">
    <script src="~/lib/summernote/styles/summernote-lite.min.js"></script>

    <!-- JQuery Session //https://github.com/AlexChittock/JQuery-Session-Plugin -->
    <script src="~/js/jquery.session.js"></script>

    <!-- Jquery Validation -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>

    <!-- font awesome css -->
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.css">

    <script src="~/js/character-counter.js"></script>

    <!-- Custom styles for this template -->
    <link href="~/css/site.css" rel="stylesheet">

    <link rel="icon" href="~/files/images/favicon.png" type="image/png">

</head>
<body>


    <div class="site-wrap">
        @RenderBody()
        <footer class="site-footer border-top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 mb-5 mb-lg-0">
                        <div class="row">
                            <div class="col-md-12">
                                <h3 class="footer-heading mb-4">Navigations</h3>
                            </div>
                            <div class="col-md-6 col-lg-4">
                                <ul class="list-unstyled">
                                    <li><a href="~/">Home</a></li>
                                    <li><a href="~/Shop">Shop</a></li>
                                    <li><a href="~/Collections">Collections</a></li>
                                    <li><a href="~/NewArrivals">New Arrivals</a></li>
                                    <li><a href="~/Contact">Contact</a></li>
                                </ul>
                            </div>
                            <div class="col-md-6 col-lg-4">
                                <ul class="list-unstyled">
                                    @ProductsHelper.GetFooterCategoryList()
                                </ul>
                            </div>
                            <div class="col-md-6 col-lg-4">
                                <ul class="list-unstyled">
                                    <li><a href="#">Account</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3 mb-4 mb-lg-0">
                        @{
                            var WeeksPopularProduct = ProductsHelper.GetWeeksPopularProduct();
                        }
                        <h3 class="footer-heading mb-4">Popular this week</h3>
                        <a href="~/Shop/Details/@ProductsHelper.GetProductData(WeeksPopularProduct, "UniqueProductName")" class="block-6">
                            <img src="~/files/@ProductsHelper.GetProductData(WeeksPopularProduct, "ImageLink")" alt="Product Image" class="img-fluid rounded mb-4">
                            <h3 class="font-weight-light  mb-0">
                                @ProductsHelper.GetProductData(WeeksPopularProduct, "ProductCategory")
                            </h3>
                            <p>
                                @ProductsHelper.GetProductData(WeeksPopularProduct, "ProductName"),
                                @ProductsHelper.GetCurrencySymbol(WeeksPopularProduct) @ProductsHelper.GetProductData(WeeksPopularProduct, "ProductPrice")
                            </p>
                        </a>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="block-5 mb-5">
                            <h3 class="footer-heading mb-4">Contact Info</h3>
                            <ul class="list-unstyled">
                                <li class="address">Serrekunda, The Gambia</li>
                                <li class="phone"><a href="tel://23923929210">+220 7258667</a></li>
                                <li class="email">akassama@gmail.com</li>
                            </ul>
                        </div>

                        <div class="block-7">
                            <form action="#" method="post">
                                <label for="email_subscribe" class="footer-heading">Subscribe</label>
                                <div class="form-group">
                                    <input type="text" class="form-control py-4" id="email_subscribe" placeholder="Email">
                                    <input type="submit" class="btn btn-sm btn-primary" value="Send">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="row pt-5 mt-5 text-center">
                    <div class="col-md-12">
                        <p>
                            Copyright &copy; All rights reserved | Developed by <a href="https://stackoverflow.com/users/5612132/laiman?tab=profile" target="_blank" class="text-primary">A. Kassama</a>
                        </p>
                    </div>

                </div>
            </div>
        </footer>
    </div>



    <script src="~/lib/modest/js/jquery-ui.js"></script>
    <script src="~/lib/modest/js/popper.min.js"></script>

    <!-- //Account design js -->
    <script src="~/lib/modest/js/owl.carousel.min.js"></script>
    <script src="~/lib/modest/js/jquery.magnific-popup.min.js"></script>
    <script src="~/lib/modest/js/aos.js"></script>
    <script src="~/lib/modest/js/main.js"></script>

    <!-- //Site js -->
    <script src="~/js/image-preview.js"></script>
    <!-- Datatables JS -->
    <script src="~/lib/datatables/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Site js -->
    <script src="~/js/site.js"></script>

    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });


        $(document).ready(function () {
            $('#dataTable').DataTable();
        });

        //Summernote
        $('#ProductDescription').summernote({
            placeholder: 'Write description here',
            tabsize: 2,
            height: 300,          // set editor height
            width: "100%",        // set editor height
            minHeight: null,      // set minimum height of editor
            maxHeight: null,      // set maximum height of editor
            dialogsInBody: true
        });


        //Jquery Validate. Add all form id requiring validation
        $("#ValidateForm").validate({
            errorClass: 'is-invalid text-danger',
            successClass: 'is-valid',
            errorsWrapper: '<span class="form-text text-danger"></span>',
            errorTemplate: '<span></span>',
            trigger: 'change'
        });
    </script>
</body>
</html>
