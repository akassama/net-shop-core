<div class="row home-collections-img">
    @{
        int delay_val = 0;
        foreach (var blogs in ViewBag.CollectionsData)
        {
            <div class="col-sm-6 col-md-6 col-lg-4 mb-4 mb-lg-0" data-aos="fade" data-aos-delay="@delay_val">
                <a class="block-2-item" href="~/Collections/Category/@blogs.CategoryName">
                    <figure class="image">
                        <img src="~/files/images/@blogs.CategoryImage" alt="" class="img-fluid">
                    </figure>
                    <div class="text">
                        <span class="text-uppercase">Collections</span>
                        <h3>@blogs.CategoryName</h3>
                    </div>
                </a>
            </div>
            delay_val = delay_val + 100;
        }
    }
</div>