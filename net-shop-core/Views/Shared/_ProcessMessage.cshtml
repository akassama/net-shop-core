
<div class="row">
    <div class="col-md-12 width-100 text-center mt-5">
        @{
            if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible" id="ProcessMessages">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>@Html.Raw(TempData["SuccessMessage"])</strong>
                </div>
            }
            else if (TempData["InfoMessage"] != null)
            {
                <div class="alert alert-info alert-dismissible" id="ProcessMessages">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>@Html.Raw(TempData["InfoMessage"])</strong>
                </div>
            }
            else if (TempData["WarningMessage"] != null)
            {
                <div class="alert alert-warning alert-dismissible" id="ProcessMessages">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>@Html.Raw(TempData["WarningMessage"])</strong>
                </div>
            }
            else if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible" id="ProcessMessages">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>@Html.Raw(TempData["ErrorMessage"])</strong>
                </div>
            }
        }
    </div>
</div>